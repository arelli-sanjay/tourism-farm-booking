<% layout("/layouts/boilerplate")%>
     <div class="row">
            <div class="col-8 offset-2">
                <br><br>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <h3>Edit your listing</h3>
    <div class="md-3">
            <label for="title" class="form-label">Title</label>
           <input type="text" value="<%=listing.title%>" name="listing[title]" class="form-control" required>
           <div class="invalid-feedback">Please enter a title.</div>
        </div>
         <div  class="md-3">
            <label for="description" class="form-label">Description</label>
             <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
             <div class="invalid-feedback">give some descripiton</div>
        </div>
        <div class="row">
            <div  class="md-3 col-md-4">
             <label for="price" class="form-label">Price</label>
             <input value="<%=listing.price%>" name="listing[price]" class="form-control" required>
             <div class="invalid-feedback">price must be valid</div>
        </div>
        <div  class="md-3 col-md-8">
             <label for="location" class="form-label">Location</label>
            <input type="text" value="<%=listing.location%>" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback">Location must be valid</div>
                   
        </div>
        </div>
         <div  class="md-3 ">
            Original Image</br>
            <img src="<%=originalImageUrl %>">
         </div>
        <div  class="md-3 ">
             <label for="image" class="form-label">Image</label>
                   <input type="file"  name="listing[image]" class="form-control">
        </div>
        <div  class="md-3">
            <label for="country" class="form-label">Country</label>
                 <input type="text" value="<%=listing.country%>" name="listing[country]" class="form-control" required>
                 <div class="invalid-feedback">Country name must be valid</div>
        </div>
        <br>
        <div>
               <button type="submit" class="btn btn-danger mt-3">edit</button>
        </div>
    </form>
        </div>
        </div><br>
