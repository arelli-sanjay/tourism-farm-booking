<% layout("/layouts/boilerplate")%>

    
        <div class="row">
            <h1 class="col-8 offset-2 mt-3 mb-3">Signup for wanderlust</h1>
            <div class="col-8 offset-2">
                <form action="/signup" method="POST" novalidate class="needs-validation form">
                     <div class="mb-3 mt-3">
            <label for="username" class="form-label">Username</label>
            <input type="text"
            name="username"
            class="form-control" 
            required>
                  <div class="invalid-feedback">Looks good!</div>
        </div>
          <div class="mb-3 mt-3">
            <label for="email" class="form-label">Email</label>
            <input type="email"
            name="email"
            class="form-control" 
            required>
        </div>
          <div class="mb-3 mt-3">
            <label for="password" class="form-label">Password</label>
            <input type="password"
            name="password"
            class="form-control" 
            required>
        </div>
        <button class="btn btn-success mb-3 mt-3">Signup</button>
                </form>
               
            </div>
        </div>